{
  "name": "test-app-tasks-list",
  "author": "Stas Konashuk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run watch-tokens\" \"next dev --turbopack\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "build-tokens": "style-dictionary build --config ./style-dictionary/config.json",
    "watch-tokens": "nodemon --watch style-dictionary/tokens --ext json --exec \"npm run build-tokens\"",
    "prettier": "prettier . --write --config .prettierrc.js",
    "eslint": "eslint . --fix",
    "precommit": "npm run build-tokens && lint-staged",
    "prepare": "husky",
    "test": "jest --config ./jest.config.js --runInBand",
    "test:watch": "jest --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@babel/preset-react": "^7.27.1",
    "@hookform/resolvers": "^5.2.1",
    "@mantine/core": "8.2.4",
    "@mantine/dates": "^8.2.4",
    "@mantine/hooks": "8.2.4",
    "@mantine/modals": "^8.2.4",
    "@mantine/notifications": "8.2.4",
    "@paralect/node-mongo": "^3.3.0",
    "@reduxjs/toolkit": "^2.8.2",
    "@storybook/react": "^9.1.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.0",
    "dayjs": "^1.11.13",
    "dotenv-flow": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^16.1.5",
    "lodash": "^4.17.21",
    "next": "15.4.6",
    "nodemon": "^3.1.10",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "style-dictionary": "^5.0.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@chromatic-com/storybook": "^4.1.0",
    "@eslint/eslintrc": "^3",
    "@storybook/addon-a11y": "^9.1.2",
    "@storybook/addon-actions": "^9.0.8",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/addon-onboarding": "^9.1.2",
    "@storybook/addon-vitest": "^9.1.2",
    "@storybook/nextjs": "^9.1.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.7.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-tsconfig-paths-module-resolver": "^1.0.4",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-next": "^15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^9.1.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-localstorage-mock": "^2.4.26",
    "storybook": "^9.1.2",
    "stylelint": "^16.23.1",
    "stylelint-config-standard-scss": "^15.0.1",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.1",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "bash -c 'tsc --noEmit'",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "!(*.css|*.ts|*.tsx|.husky/**)": [
      "prettier --write"
    ]
  }
}
